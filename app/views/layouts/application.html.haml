!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Fily"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements


    = stylesheet_link_tag 'http://blueimp.github.com/cdn/css/bootstrap.min.css'
    = stylesheet_link_tag '/javascripts/jquery-file-upload/css/style.css'
    = stylesheet_link_tag "http://blueimp.github.com/cdn/css/bootstrap-responsive.min.css"
    /[if lt IE 7]
      = stylesheet_link_tag "http://blueimp.github.com/cdn/css/bootstrap-ie6.min.css"
    = stylesheet_link_tag "http://blueimp.github.com/Bootstrap-Image-Gallery/css/bootstrap-image-gallery.min.css"
    = stylesheet_link_tag "/javascripts/jquery-file-upload/css/jquery.fileupload-ui.css"
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js'


    = javascript_include_tag 'http://blueimp.github.com/JavaScript-Templates/tmpl.min.js'
    = javascript_include_tag 'http://blueimp.github.com/JavaScript-Load-Image/load-image.min.js'

    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.iframe-transport.js'
    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.fileupload.js'
    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.fileupload-ui.js'

    -#= stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag 'http://blueimp.github.com/cdn/css/bootstrap.min.css'
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Fily
          .container.nav-collapse
            %ul.nav
              %li= link_to "Link 1", "/path1"
              %li= link_to "Link 2", "/path2"
              %li= link_to "Link 3", "/path3"

    .container

      .content
        .row
          .span9
            = yield
          .span3
            .well.sidebar-nav
              %h3 Sidebar
              %ul.nav.nav-list
                %li.nav-header Sidebar
                %li= link_to "Link 1", "/path1"
                %li= link_to "Link 2", "/path2"
                %li= link_to "Link 3", "/path3"
    
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    =# javascript_include_tag "application"
